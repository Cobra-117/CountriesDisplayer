@inherits LayoutComponentBase
@using MudBlazor
@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />




<MudThemeProvider Theme="@MyTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Primary">
        <MudText Typo="Typo.h6">Country Info</MudText>
        <MudNavLink Href="/">
            <MudIcon Icon="@Icons.Material.Filled.LocationCity" />
            <span>Countries</span>
        </MudNavLink>
        <MudNavLink Href="/cities">
            <MudIcon Icon="@Icons.Material.Filled.LocationCity" />
            <span>Cities</span>
        </MudNavLink>
        <MudNavLink Href="/tourism">
            <MudIcon Icon="@Icons.Material.Filled.BookOnline" />
            <span>Cities</span>
        </MudNavLink>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private MudTheme MyTheme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = "#2196F3", // Blue
            Secondary = "#42A5F5",
            Tertiary = "#90CAF9",
            AppbarBackground = "#1976D2",
            Background = "#E3F2FD",
            Surface = "#BBDEFB"
        }
    };
}


